# RATS: Test control flow (if/elsif/else/while)
use "test"

rats "if statement true branch"
  result = nil
  if true
    result = "yes"
  end
  test.assert_eq(result, "yes")
end

rats "if/else false branch"
  result = nil
  if false
    result = "yes"
  else
    result = "no"
  end
  test.assert_eq(result, "no")
end

rats "if/elsif/else chain"
  x = 2
  result = nil
  if x == 1
    result = "one"
  elsif x == 2
    result = "two"
  else
    result = "other"
  end
  test.assert_eq(result, "two")
end

rats "while loop"
  i = 0
  results = []
  while i < 3
    results = append(results, i)
    i = i + 1
  end
  test.assert_eq(results[0], 0)
  test.assert_eq(results[1], 1)
  test.assert_eq(results[2], 2)
end

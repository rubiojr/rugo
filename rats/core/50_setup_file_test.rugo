# RATS: Test setup_file and teardown_file hooks
use "test"
use "os"
import "os" as go_os

TEST_TMPDIR = `mktemp -d -t rats-setup-file-XXXXXXXX`

def base_dir()
  return TEST_TMPDIR
end

def setup_file()
  test.write_file("#{TEST_TMPDIR}/marker.txt", "setup_file_called")
end

def teardown_file()
  go_os.remove_all(TEST_TMPDIR)
end

rats "setup_file runs before tests"
  result = test.run("cat #{base_dir()}/marker.txt")
  test.assert_eq(result["status"], 0)
  test.assert_eq(result["output"], "setup_file_called")
end

rats "setup_file state persists across tests"
  result = test.run("cat #{base_dir()}/marker.txt")
  test.assert_eq(result["status"], 0)
  test.assert_eq(result["output"], "setup_file_called")
end


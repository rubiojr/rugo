#!/usr/bin/env rugo

# RATS runner - builds rugo and runs the RATS test suite
import "os"

puts "==============================="
puts "  Building rugo"
puts "==============================="
os.exec("go build -o ./rugo .")
puts "  OK"
puts ""

puts "==============================="
puts "  Running RATS suite"
puts "==============================="
puts ""
__shell__("./rugo test --jobs 4 rats/")

# RATS: Test variables, types, and expressions
use "test"

rats "variables and arithmetic"
  x = 10
  y = 20
  test.assert_eq(x + y, 30)
end

rats "string concatenation"
  name = "world"
  test.assert_eq("hello " + name, "hello world")
end

rats "boolean values"
  test.assert_eq(true, true)
  test.assert_eq(false, false)
end

rats "nil value"
  x = nil
  test.assert_nil(x)
end

rats "string interpolation"
  name = "rugo"
  test.assert_eq("hello " + name, "hello rugo")
end

rats "arithmetic operations"
  test.assert_eq(2 + 3, 5)
  test.assert_eq(10 - 4, 6)
  test.assert_eq(3 * 7, 21)
  test.assert_eq(15 / 3, 5)
end

rats "comparison operators"
  test.assert_eq(1 == 1, true)
  test.assert_eq(1 != 2, true)
  test.assert_eq(3 > 2, true)
  test.assert_eq(2 < 3, true)
end

rats "logical operators"
  test.assert_eq(true && true, true)
  test.assert_eq(true && false, false)
  test.assert_eq(false || true, true)
  test.assert_eq(false || false, false)
end

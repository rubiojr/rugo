# RATS: Test Go bridge â€” unicode package
use "test"

import "unicode"

rats "unicode.is_letter"
  test.assert_true(unicode.is_letter("A"))
  test.assert_false(unicode.is_letter("5"))
  test.assert_false(unicode.is_letter(" "))
end

rats "unicode.is_digit"
  test.assert_true(unicode.is_digit("9"))
  test.assert_false(unicode.is_digit("a"))
  test.assert_false(unicode.is_digit(" "))
end

rats "unicode.is_space"
  test.assert_true(unicode.is_space(" "))
  test.assert_false(unicode.is_space("a"))
end

rats "unicode.is_upper and is_lower"
  test.assert_true(unicode.is_upper("A"))
  test.assert_false(unicode.is_upper("a"))
  test.assert_true(unicode.is_lower("a"))
  test.assert_false(unicode.is_lower("A"))
end

rats "unicode.is_punct"
  test.assert_true(unicode.is_punct("!"))
  test.assert_false(unicode.is_punct("a"))
  test.assert_true(unicode.is_punct("."))
end

rats "unicode.to_upper and to_lower"
  test.assert_eq(unicode.to_upper("a"), "A")
  test.assert_eq(unicode.to_upper("z"), "Z")
  test.assert_eq(unicode.to_lower("A"), "a")
  test.assert_eq(unicode.to_lower("Z"), "z")
end

rats "unicode empty string"
  test.assert_false(unicode.is_letter(""))
  test.assert_eq(unicode.to_upper(""), "")
end

rats "unicode first char only"
  test.assert_true(unicode.is_letter("abc"))
  test.assert_true(unicode.is_digit("3abc"))
  test.assert_eq(unicode.to_upper("abc"), "A")
end

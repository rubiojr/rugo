# RATS: Test Go bridge â€” sort package (1:1 mapping)
# Note: sort.Strings mutates a []string in-place, but bridge passes a copy
# of the Rugo []interface{} array, so in-place mutation is not visible.
# Only non-mutating functions are testable via the 1:1 bridge.
use "test"

import "sort"

rats "sort.search_strings finds element"
  test.assert_eq(sort.search_strings(["a", "b", "c", "d"], "c"), 2)
end

rats "sort.search_strings missing element"
  test.assert_eq(sort.search_strings(["a", "b", "d"], "c"), 2)
end

rats "sort.strings_are_sorted with sorted array"
  test.assert_true(sort.strings_are_sorted(["a", "b", "c"]))
end

rats "sort.strings_are_sorted with unsorted array"
  test.assert_false(sort.strings_are_sorted(["c", "a", "b"]))
end

rats "sort.strings_are_sorted empty array"
  test.assert_true(sort.strings_are_sorted([]))
end

rats "sort.strings_are_sorted single element"
  test.assert_true(sort.strings_are_sorted(["only"]))
end
